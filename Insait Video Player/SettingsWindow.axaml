<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Insait_Video_Player.Localization"
        x:Class="Insait_Video_Player.SettingsWindow"
        Title="Налаштування"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="None"
        Background="{DynamicResource AppBgBrush}"
        Width="550"
        Height="450"
        CanResize="False"
        UseLayoutRounding="True"
        FontFamily="Segoe UI, Arial, Tahoma">

    <Grid RowDefinitions="42,*">

        <!-- ROW 0: TITLE BAR -->
        <Grid Grid.Row="0" Name="TitleBar" Background="{DynamicResource GrayGradient}">
            <Grid ColumnDefinitions="Auto,*,Auto">

                <!-- Left: Settings icon + title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <Border Width="28" Height="28" CornerRadius="4" Background="{DynamicResource AccentOrangeBrush}" Margin="0,0,10,0">
                        <Viewbox Width="18" Height="18">
                            <Canvas Width="24" Height="24">
                                <Path Fill="{DynamicResource AccentPurpleBrush}" Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                            </Canvas>
                        </Viewbox>
                    </Border>
                    <TextBlock Name="TitleText" Text="Налаштування"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AppTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Middle: Draggable area -->
                <Panel Name="TitleBarDragArea" Grid.Column="1" Background="Transparent"/>

                <!-- Right: Close button -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="CloseButton" Classes="window-control close" Padding="0">
                        <Image Source="avares://Insait Video Player/Sources/CloseButton.png" Stretch="UniformToFill"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- ROW 1: Content area -->
        <Border Grid.Row="1" Classes="panel" Margin="8" Padding="0">
            <Grid ColumnDefinitions="160,*">
                
                <!-- Left: Navigation menu -->
                <Border Grid.Column="0" Background="#20000000" CornerRadius="12,0,0,12" Padding="8">
                    <StackPanel Spacing="4">
                        <!-- General/Language section -->
                        <Button Name="GeneralSectionButton" Classes="settings-nav-button active" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                                          Width="16" Height="16" Foreground="{DynamicResource AccentPurpleBrush}"/>
                                <TextBlock Name="GeneralNavText" Text="Загальні" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- About section -->
                        <Button Name="AboutSectionButton" Classes="settings-nav-button" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                          Width="16" Height="16" Foreground="{DynamicResource AccentPurpleBrush}"/>
                                <TextBlock Name="AboutNavText" Text="Про програму" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- Right: Content panels -->
                <Border Grid.Column="1" Padding="20">
                    <Grid>
                        <!-- General section panel -->
                        <StackPanel Name="GeneralPanel" Spacing="20" IsVisible="True">
                            <!-- Language selection -->
                            <StackPanel Spacing="12">
                                <TextBlock Name="LanguageSectionTitle" Text="Мова" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource AppTextBrush}"/>
                                <TextBlock Name="LanguageSectionDescription" Text="Виберіть мову інтерфейсу" FontSize="12" Foreground="{DynamicResource AppTextMutedBrush}"/>
                                
                                <ComboBox Name="LanguageComboBox" 
                                          Width="250" Height="36"
                                          Background="{DynamicResource AppSurfaceBrush}"
                                          BorderBrush="{DynamicResource AccentPurpleBrush}"
                                          BorderThickness="2"
                                          CornerRadius="8"
                                          Foreground="{DynamicResource AppTextBrush}"
                                          FontSize="14"
                                          Padding="12,0"
                                          VerticalContentAlignment="Center"
                                          HorizontalAlignment="Left">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="loc:LanguageItem">
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource AppTextBrush}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <!-- Restart notice -->
                                <Border Background="#20FF8C00" CornerRadius="6" Padding="12,8" Margin="0,8,0,0">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                                  Width="14" Height="14" Foreground="{DynamicResource AccentOrangeBrush}"/>
                                        <TextBlock Name="RestartNoticeText" Text="Для застосування деяких змін може знадобитися перезапуск програми" 
                                                   FontSize="11" Foreground="{DynamicResource AppTextMutedBrush}" TextWrapping="Wrap" MaxWidth="280"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- About section panel -->
                        <StackPanel Name="AboutPanel" Spacing="20" IsVisible="False">
                            <StackPanel Spacing="12">
                                <TextBlock Name="AboutTitle" Text="Про програму" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource AppTextBrush}"/>
                                
                                <!-- App logo and name -->
                                <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,10,0,0">
                                    <Border Width="64" Height="64" CornerRadius="12" Background="{DynamicResource AccentOrangeBrush}">
                                        <Viewbox Width="40" Height="40">
                                            <Canvas Width="24" Height="24">
                                                <Path Fill="{DynamicResource AccentPurpleBrush}" Data="M8,5V19L19,12Z"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Spacing="4">
                                        <TextBlock Text="Insait Video Player" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource AppTextBrush}"/>
                                        <TextBlock Name="VersionText" Text="Версія 1.0.0" FontSize="12" Foreground="{DynamicResource AppTextMutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <Border Height="1" Background="{DynamicResource AppBorderBrush}" Margin="0,10"/>
                                
                                <TextBlock Name="AboutDescriptionText" Text="Сучасний відео плеєр з підтримкою багатьох форматів" 
                                           FontSize="13" Foreground="{DynamicResource AppTextMutedBrush}" TextWrapping="Wrap"/>
                                
                                <StackPanel Spacing="4" Margin="0,8,0,0">
                                    <TextBlock Name="CopyrightText" Text="© 2026 Insait" FontSize="12" Foreground="{DynamicResource AppTextMutedBrush}"/>
                                    <TextBlock Name="PoweredByText" Text="LibVLC powered video playback" FontSize="11" Foreground="{DynamicResource AppTextMutedBrush}" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>

